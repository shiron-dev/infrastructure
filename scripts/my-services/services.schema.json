{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "On-premise Service Catalog",
  "description": "List of services managed on-premises",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique name of the service"
          },
          "description": {
            "type": "string",
            "description": "Description of the service"
          },
          "host": {
            "type": "string",
            "description": "Hostname or IP where the service runs"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Primary URL of the service"
          },
          "healthcheck": {
            "type": "boolean",
            "description": "Whether the service requires a health check",
            "default": false
          },
          "image": {
            "type": [
              "string",
              "null"
            ],
            "format": "uri",
            "description": "URL of the service icon image (optional)"
          },
          "label": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Labels (tags) to categorize the service"
          },
          "category": {
            "type": "string",
            "description": "Top-level category the service belongs to"
          },
          "alias-name": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Alternative names or aliases of the service"
          },
          "external": {
            "type": "boolean",
            "description": "Whether the service is external (not self-hosted)",
            "default": false
          }
        },
        "required": [
          "name",
          "description",
          "host",
          "url",
          "healthcheck",
          "label",
          "category",
          "alias-name"
        ]
      }
    }
  },
  "required": [
    "services"
  ]
}
