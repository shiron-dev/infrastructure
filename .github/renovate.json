{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>shiron-dev/renovate-config"],
  "github-actions": {
    "extends": [
      "helpers:pinGitHubActionDigests"
    ],
    "packageRules": [
      {
        "groupName": "official actions",
        "matchPackageNames": [
          "/^actions//"
        ],
        "pinDigests": true
      }
    ]
  }
}
